---
import Base from "@layouts/main.astro";
import Button from "@components/Button.astro";

import { supabase } from "../lib/supabase";
import { formatMinuteCount } from "../lib/formatter";

import { Icon } from "astro-icon/components";

const stations = (await supabase.from("stations").select("*")).data;
const currentData = (await supabase.from("current").select("*")).data;
---

<Base>
  <main class="py-16">
    <div class="text-center">
      <div class="mb-8">
        <Icon
          name="fa7-regular:angry"
          class="mx-auto text-8xl text-red-400 md:text-9xl"
        />
      </div>

      <div class="mx-auto space-y-6">
        <h1 class="text-3xl leading-tight font-bold md:text-4xl">
          所以我說，我的 <span class="text-red-400">YouBike</span> 呢？
        </h1>
        <p class="text-lg text-gray-400">
          管什麼見車率，我要真實數據
        </p>

        <div
          class="inline-flex items-center rounded-full bg-gray-800/50 px-4 py-2 text-sm text-gray-300"
        >
          <Icon
            name="material-symbols:pedal-bike-outline-rounded"
            class="mr-2 text-lg"
          />
          目前正在追蹤 <span class="mx-1 font-semibold text-white"
            >{stations?.length ?? "!"}</span
          > 個站點
        </div>
      </div>
    </div>

    <div class="mt-8">
      <div class="mx-auto grid max-w-3xl gap-6 md:grid-cols-2">
        <div
          class="space-y-4 rounded-lg border-2 border-amber-400 bg-gray-800 px-6 py-4"
        >
          <p class="text-2xl font-bold">
            {
              formatMinuteCount(
                currentData?.reduce(
                  (prev, curr) => prev + curr.unavailable,
                  0,
                ) ?? 0,
              )
            }
          </p>

          <p class="mt-2 font-bold text-gray-400 md:text-lg">
            無車可借
          </p>
        </div>

        <div
          class="space-y-4 rounded-lg border-2 border-indigo-400 bg-gray-800 px-6 py-4"
        >
          <p class="text-2xl font-bold">
            {
              formatMinuteCount(
                currentData?.reduce(
                  (prev, curr) => prev + curr.full,
                  0,
                ) ?? 0,
              )
            }
          </p>

          <p class="mt-2 font-bold text-gray-400 md:text-lg">
            無位可還
          </p>
        </div>
      </div>
    </div>
  </main>

