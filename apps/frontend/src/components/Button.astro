---
import { twMerge } from "tailwind-merge";
const { className, link, target, glow, paddingOverride } =
  Astro.props;
---

<div
  class={twMerge(
    "w-fit bg-gray-800 border-2 border-emerald-400 border-solid hover:bg-emerald-400 hover:text-gray-800 hover:shadow-emerald-400 duration-300 rounded",
    glow && "hover:shadow-[0_0_15px_4px]",
    className,
  )}
>
  <a
    href={link}
    target={target ?? "_self"}
    class="inline h-max w-max"
  >
    <div class={twMerge("px-5 py-3", paddingOverride)}><slot /></div>
  </a>
</div>
