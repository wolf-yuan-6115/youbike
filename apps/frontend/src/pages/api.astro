---
import "swagger-ui/dist/swagger-ui.css";
---

<html>
  <head>
    <meta charset="utf-8" />
  </head>
  <body>
    <div id="swagger"></div>
  </body>
</html>

<script>
  import SwaggerUI from "swagger-ui";

  window.addEventListener("load", () => {
    SwaggerUI({
      url: "/openapi.yaml",
      dom_id: "#swagger",
      layout: "BaseLayout",
    });
  });
</script>
